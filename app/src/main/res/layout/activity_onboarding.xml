<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/white"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="-120dp"
        android:src="@drawable/onboarding_logo" />

    <TextView
        android:id="@+id/onboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to AnimoQuest!"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="-40dp"/>

    <TextView
        android:id="@+id/onboardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the app and enjoy all its features."
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#14452F"
        android:text="Login"
        android:onClick="loginFunction"/>

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:onClick="registerFunction"
        android:textColor="#14452F"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="20dp" />
</LinearLayout>
