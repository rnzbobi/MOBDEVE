<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/elevator_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elevator Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/input_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Capacity"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Floor"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/input_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Destination Floor"
        android:inputType="number"
        android:layout_marginBottom="16dp" />


    <!-- TimePicker
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_gravity="center" />-->

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:backgroundTint="#347000"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_close_elevator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:backgroundTint="#6D6969"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />
</LinearLayout>
