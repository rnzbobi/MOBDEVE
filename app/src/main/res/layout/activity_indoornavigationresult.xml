<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.IndoorNavigationResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/indoornavimage"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:clickable="false"
        android:focusable="true"
        android:src="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/indoornavigationbackbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/indoornavigationbackbtn"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="6dp"
        android:layout_margin="6dp"
        android:elevation="50dp"/>

    </RelativeLayout>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Text"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Text"
            android:textColor="#8a8787"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/indoornavfloors"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
    <TextView
        android:id="@+id/flooramenitiestext"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:text="X Floor Amenities"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/indoornavamenities"
        android:layout_width="match_parent"
        android:layout_height="175dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:textSize="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Title">
        </TextView>
        <TextView
            android:id="@+id/indoornavdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:layout_margin="6dp"
            android:text="Body">

        </TextView>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>