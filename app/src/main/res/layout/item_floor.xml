<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/notification_background"
    android:elevation="0dp"
    android:layout_margin="8dp">

    <!-- Image for the Floor with a circular shape -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/floor_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#347000" />

    <!-- Main content area: Floor name, capacity, and waiting time -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Floor Name -->
        <TextView
            android:id="@+id/floorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Floor Name" />

        <!-- Capacity -->
        <TextView
            android:id="@+id/capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity: N/A"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Waiting Time -->
        <TextView
            android:id="@+id/waitingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting Time: N/A"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
